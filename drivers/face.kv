#: kivy 2.0.0

<Container>:
    padding: 20
    spacing: 10
    orientation: 'vertical'

    adress_call: adress_call
    start_job: start_job
    drive_for_client: drive_for_client
    waiting_client: waiting_client
    order_execution: order_execution
    end_job: end_job

    Label:
        id: adress_call
        text: 'Адрес вызова'

    Label:
        text: 'Адрес назначения'

    Button:
        id: start_job
        text: 'Ожидаю вызова'
        on_release:
            root.start_job_method()

    Button:
        id: drive_for_client
        text: 'Еду за пассажиром'
        on_release:
            root.drive_for_client_method()

    Button:
        id: waiting_client
        text: 'Ожидаю пассажира'
        on_release:
            root.waiting_client_method()

    Button:
        id: order_execution
        text: 'Везу пассажира'
        on_release:
            root.order_execution_method()

    Button:
        id: end_job
        text: 'Конец работы'
        on_press:
            root.end_job_method()
        on_release:
            app.stop()